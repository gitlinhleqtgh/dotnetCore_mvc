@{
    ViewData["Title"] = "Add Page";
}
<h1>Welcome to Add Book Page</h1>
<form action="/book/SaveBook" method="post">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" aria-describedby="emailHelp"
            placeholder="Enter Name Book" name="Name">
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <input type="text" class="form-control" id="Description" placeholder="description" name="Description">
    </div>
    <div class="form-group">
        <label for="TotalPage">Total Page</label>
        <input type="text" class="form-control" id="TotalPage" placeholder="total page" name="TotalPage">
    </div>
    <div class="form-group">
        <label for="ImagePath">Total Page</label>
        <input type="text" class="form-control" id="ImagePath" placeholder="image path" name="ImagePath">
    </div>
    <div class="form-group">
        <label for="Price">Total Page</label>
        <input type="text" class="form-control" id="Price" placeholder="price" name="Price">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>